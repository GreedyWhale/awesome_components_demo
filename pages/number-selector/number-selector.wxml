<ac-nav-bar
  title="Number Selector" nav-bar-text-color="#161616" background-color="#f0d22e"
  home-path="/pages/home/home"></ac-nav-bar>
<view class="page-header">数字选择器 Number Selector</view>

<view class="page-content">
  <view class="page-content-title">基础用法</view>
  <view class="page-content-inner">
    <ac-number-selector></ac-number-selector>
  </view>
</view>

<view class="page-content">
  <view class="page-content-title">默认值</view>
  <view class="page-content-inner">
    <ac-number-selector default-value="{{100}}"></ac-number-selector>
  </view>
</view>

<view class="page-content">
  <view class="page-content-title">限制最大值 & 最小值</view>
  <view class="page-content-inner">
    <ac-number-selector max-num="{{10}}" min-num="{{1}}"></ac-number-selector>
  </view>
</view>

<view class="page-content">
  <view class="page-content-title">修改递增量 & 递减量</view>
  <view class="page-content-inner">
    <ac-number-selector add-num="{{5}}" reduce-num="{{10}}"></ac-number-selector>
  </view>
</view>

<view class="page-content">
  <view class="page-content-title">开启手动输入</view>
  <view class="page-content-inner">
    <ac-number-selector manual></ac-number-selector>
  </view>
</view>

<view class="page-content">
  <view class="page-content-title">数字展示区宽度自适应</view>
  <view class="page-content-inner">
    <ac-number-selector adaptation max-width="200" add-num="{{100}}" reduce-num="{{100}}"></ac-number-selector>
  </view>
</view>